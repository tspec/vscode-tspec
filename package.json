{
	"name": "tspec-runner",
	"publisher": "TspecOrg",
	"displayName": "Tspec Runner",
	"description": "Execute Tspec files",
	"version": "0.0.3",
	"repository": {
		"type": "git",
		"url": "https://github.com/tspec/vscode-tspec-runner"
	},
	"engines": {
		"vscode": "^1.67.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "tspec-runner.runSpec",
				"category": "Tspec",
				"title": "Run Specification"
			}
		],
		"languages": [
			{
				"id": "tspec",
				"aliases": [
					"tspec",
					"tspec"
				],
				"extensions": [
					".tspec",
					".tspec.md"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "tspec",
				"scopeName": "text.html.markdown.tspec",
				"path": "./syntaxes/tspec.tmLanguage.json"
			}
		],
		"configuration": {
			"properties": {
				"tspec-runner.enableCodeLens": {
					"type": "boolean",
					"default": true
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.67.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.21.0",
		"@typescript-eslint/parser": "^5.21.0",
		"eslint": "^8.14.0",
		"glob": "^8.0.1",
		"mocha": "^9.2.2",
		"typescript": "^4.6.4",
		"@vscode/test-electron": "^2.1.3"
	}
}